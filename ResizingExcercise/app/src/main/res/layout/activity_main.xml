<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/baby_100x100"
        />
        <ImageButton
            android:id="@+id/camera"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/camera"
         />

        <ImageButton
            android:id="@+id/edit"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/edit"
            />

    <ImageButton
        android:id="@+id/print"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toLeftOf="@id/edit"
        android:src="@drawable/print"
        />

        <TextView
            android:id="@+id/first_name_label"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/first_name_label"
            android:textColor="#000"
            android:textStyle="bold"

            android:layout_toRightOf="@id/profile_pic"
            android:layout_below="@id/edit"
            />

        <EditText
            android:id="@+id/first_name_value"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/first_name_value"
            android:textColor="#000"
            android:background="@drawable/textborder"

            android:layout_toRightOf="@id/profile_pic"
            android:layout_below="@id/first_name_label"
            />


    <TextView
        android:id="@+id/last_name_label"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/last_name_label"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/first_name_value"
        android:layout_alignLeft="@id/first_name_value"
        />
   <EditText
       android:id="@+id/last_name_value"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:text="@string/last_name_value"
       android:textColor="#000"
       android:background="@drawable/textborder"
       android:layout_marginBottom="5dp"
       android:layout_below="@id/last_name_label"
       android:layout_alignLeft="@id/last_name_label"
       />

    <TextView
        android:id="@+id/dob_label"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/dob_label"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/profile_pic"
        android:layout_alignTop="@id/last_name_label"
        />

    <EditText
        android:id="@+id/dob_value"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/dob_value"
        android:textColor="#000"
        android:background="@drawable/textborder"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/dob_label"
        />
    <TextView
        android:id="@+id/gender_label"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/gender_label"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/dob_value"
        />
    <Spinner
        android:id="@+id/gender_value"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:entries="@array/genders"
        android:layout_below="@id/gender_label"
        />


    <TextView
        android:id="@+id/height_label"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/height_label"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:layout_alignLeft="@id/last_name_label"
        android:layout_alignTop="@id/gender_label"
        />
    <EditText
        android:id="@+id/height_value"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/height_value"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:background="@drawable/textborder"
        android:inputType="numberDecimal"
        android:layout_alignLeft="@id/height_label"
        android:layout_alignTop="@id/gender_value"
        />

    <TextView
        android:id="@+id/weight_label"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/weight_label"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/height_label"
        android:layout_alignTop="@id/height_label"
        />


    <EditText
        android:id="@+id/weight_value"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/weight_value"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:background="@drawable/textborder"
        android:inputType="numberDecimal"
        android:layout_below="@id/weight_label"
        android:layout_alignLeft="@id/weight_label"
        />

    <TextView
        android:id="@+id/country_label"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/country_label"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/gender_value"
        />

    <EditText
        android:id="@+id/country_value"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/country_value"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:background="@drawable/textborder"
        android:layout_below="@id/country_label"
        />
</RelativeLayout>
